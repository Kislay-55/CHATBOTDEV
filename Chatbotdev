    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const analyzeBtn = document.getElementById('analyze-btn');
            const textarea = document.getElementById('textarea');
            
            analyzeBtn.addEventListener('click', function() {
                const text = textarea.value.trim();
                if (!text) {
                    alert('Please enter some text to analyze.');
                    return;
                }
                
                // Simulate analysis by highlighting potential errors
                analyzeText(text);
            });
            
            function analyzeText(text) {
                // This is a simplified version - a real implementation would use NLP
                const words = text.split(/\s+/);
                let result = text;
                
                // Common spelling mistakes
                const corrections = {
                    'teh': 'the',
                    'adn': 'and',
                    'thier': 'their',
                    'recieve': 'receive',
                    'definately': 'definitely',
                    'seperate': 'separate'
                };
                
                // Highlight potential errors
                Object.keys(corrections).forEach(wrong => {
                    const regex = new RegExp(`\\b${wrong}\\b`, 'gi');
                    result = result.replace(regex, `<span class="bg-yellow-100 text-yellow-800 px-1 rounded">${wrong}</span>`);
                });
                
                // Grammar patterns to highlight
                const grammarPatterns = [
                    { regex: /(?:\bI\s+\bam\b|\bWe\s+\bare\b|\bThey\s+\bare\b).*?\b(?:good|fine|well)\b/gi, className: 'bg-blue-100 text-blue-800 px-1 rounded' },
                    { regex: /\b(?:a|an)\s+(?:[aeiou]h?[^ ]*)\b/gi, message: 'Check article usage' },
                    { regex: /\b(?:your|you're)\b/gi, message: 'Check your/you\'re' }
                ];
                
                grammarPatterns.forEach(pattern => {
                    result = result.replace(pattern.regex, match => {
                        return `<span class="${pattern.className || 'bg-purple-100 text-purple-800 px-1 rounded'}" title="${pattern.message || 'Potential grammar issue'}">${match}</span>`;
                    });
                });
                
                // Show results
                textarea.insertAdjacentHTML('afterend', 
                    `<div class="mt-6 p-4 bg-white rounded-lg border border-slate-200">
                        <h4 class="font-medium text-lg mb-3">Analysis Results</h4>
                        <div class="prose max-w-none mb-4">
                            ${result}
                        </div>
                        <div class="flex justify-end">
                            <button id="apply-corrections" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium text-sm transition">Apply Corrections</button>
                        </div>
                    </div>`
                );
                
                // Correction button handler
                document.getElementById('apply-corrections')?.addEventListener('click', function() {
                    let correctedText = text;
                    Object.keys(corrections).forEach(wrong => {
                        const regex = new RegExp(`\\b${wrong}\\b`, 'gi');
                        correctedText = correctedText.replace(regex, corrections[wrong]);
                    });
                    textarea.value = correctedText;
                    this.parentNode.parentNode.remove();
                });
            }
            
            // Smooth scrolling for anchor links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    document.querySelector(this.getAttribute('href')).scrollIntoView({
                        behavior: 'smooth'
                    });
                });
            });
            
            // Mobile menu toggle would go here in a real implementation
        });
    </script>
</body>
</html>
```
